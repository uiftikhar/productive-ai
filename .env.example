# MongoDB Connection
MONGO_DB_URI=mongodb://localhost:27017/productive-ai
MONGO_DB_USERNAME=username
MONGO_DB_PASSWORD=password

# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:8080

# OpenAI API
OPENAI_API_KEY=your-openai-api-key
DEFAULT_MODEL=gpt-4-turbo
EMBEDDING_MODEL=text-embedding-3-large
AGENT_TEMPERATURE=0.1

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_REGION=us-east-1
PINECONE_CLOUD=aws
PINECONE_INDEX=productive-ai
PINECONE_NAMESPACE=default

# Mem0
MEM0_API_KEY=your-mem0-api-key
MEM0_ORGANIZATION_NAME=your-org-name
MEM0_ORGANIZATION_ID=your-org-id
MEM0_PROJECT_NAME=your-project-name
MEM0_PROJECT_ID=your-project-id

# JWT Authentication (Optional)
# JWT_SECRET=your-jwt-secret-key
# JWT_EXPIRATION=24h

# LangSmith Tracing
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_TRACING=false
LANGSMITH_PROJECT=default
LANGSMITH_ORG_ID=your-org-id
LANGSMITH_WORKSPACE_ID=your-workspace-id
LANGSMITH_PROJECT_ID=your-project-id

# General Tracing
ENABLE_TRACING=true
TRACE_PROJECT_NAME=followup
TRACE_LOG_TO_FILE=true
TRACE_LOG_DIRECTORY=logs

# Client Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000
NEXT_PUBLIC_AUTH_ENABLED=true

# Production Deployment
# Set these in your production environment only
# MONGODB_URI=your-production-mongodb-uri
# NEXT_PUBLIC_API_URL=https://api.your-domain.com
# NEXT_PUBLIC_WS_URL=wss://api.your-domain.com

# Note: Create a .env file with your actual values
# DO NOT commit your actual .env file to version control 