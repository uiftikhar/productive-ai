{
  "name": "productive-ai",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev:build": "docker compose build",
    "dev": "docker compose up",
    "dev:server": "cd server && yarn dev",
    "dev:client": "cd client && yarn dev",
    "build": "yarn build:server && yarn build:client",
    "build:server": "cd server && yarn build",
    "build:client": "cd client && yarn build",
    "start": "docker compose up -d",
    "stop": "docker compose down",
    "test": "yarn test:server",
    "test:server": "cd server && yarn test",
    "test:client": "cd client && yarn test",
    "lint": "yarn lint:server && yarn lint:client",
    "lint:server": "cd server && yarn lint",
    "lint:client": "cd client && yarn lint",
    "setup": "yarn install && yarn setup:client",
    "setup:client": "cd client && yarn install",
    "clean": "yarn clean:server && yarn clean:client",
    "clean:server": "cd server && yarn clean",
    "clean:client": "cd client && rm -rf .next node_modules"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "description": "AI agent platform with specialized agents for various tasks",
  "repository": {
    "type": "git",
    "url": "https://github.com/uiftikhar/productive-ai.git"
  },
  "author": "Your Name",
  "license": "MIT"
}