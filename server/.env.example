# Server settings
PORT=3000
HOST=localhost
NODE_ENV=development

# Database settings
DB_TYPE=sqlite
DB_DATABASE=./data/meetings.db
DB_SYNCHRONIZE=true

# Authentication settings
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=7d

# Storage paths
FILE_STORAGE_PATH=./data/file-storage
TRANSCRIPTS_PATH=./data/transcripts
MEETINGS_PATH=./data/meeting-analysis/meetings
TEAMS_PATH=./data/meeting-analysis/teams
RESULTS_PATH=./data/meeting-analysis/results
SESSIONS_PATH=./data/meeting-analysis/sessions
MEMORY_PATH=./data/meeting-analysis/memory

# LLM settings
DEFAULT_LLM_MODEL=gpt-4o
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Logging
LOG_LEVEL=info
